# PostgreSQL connection URL used for presence persistence.
DATABASE_URL=postgres://postgres:postgres@localhost:5432/hexmud
# Optional pool size override (defaults to 10 when unset)
DATABASE_MAX_CONNECTIONS=10

# HexMUD Server Authentication
# Copy to .env and replace placeholder values.

# Azure Entra ID (MSAL) configuration
MSAL_CLIENT_ID=00000000-0000-0000-0000-000000000000
# Use the CIAM-friendly domain (ciamlogin.com or your custom verified domain) so the
# issuer host matches the authority you configure in MSAL.
MSAL_AUTHORITY=https://your-domain.ciamlogin.com/your-tenant-id/v2.0
MSAL_JWKS_URI=https://your-domain.ciamlogin.com/your-tenant-id/discovery/v2.0/keys
MSAL_API_AUDIENCE=00000000-0000-0000-0000-000000000000
MSAL_REQUIRED_SCOPE=api://00000000-0000-0000-0000-000000000000/GameService.Access
