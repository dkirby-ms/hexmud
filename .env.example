# Server configuration
SERVER_PORT=2567
SERVER_HOST=0.0.0.0
LOG_LEVEL=info
PROTOCOL_VERSION=1
SERVER_BUILD_NUMBER=1
HEARTBEAT_INTERVAL_MS=5000
HEARTBEAT_TIMEOUT_MS=30000
HEARTBEAT_RATE_LIMIT_CAPACITY=3
HEARTBEAT_RATE_LIMIT_REFILL_AMOUNT=1
HEARTBEAT_RATE_LIMIT_INTERVAL_MS=1000

# Metrics placeholders
METRICS_ENABLED=false

# Authentication (Azure Entra ID / MSAL)
MSAL_CLIENT_ID=00000000-0000-0000-0000-000000000000
MSAL_TENANT_ID=00000000-0000-0000-0000-000000000000
MSAL_AUTHORITY=https://login.microsoftonline.com/${MSAL_TENANT_ID}
MSAL_JWKS_URI=https://login.microsoftonline.com/${MSAL_TENANT_ID}/discovery/v2.0/keys
MSAL_REDIRECT_URI=http://localhost:5173

# Frontend (Vite uses VITE_ prefix for exposure)
VITE_SERVER_URL=http://localhost:2567
VITE_PROTOCOL_VERSION=1
VITE_MSAL_CLIENT_ID=${MSAL_CLIENT_ID}
VITE_MSAL_AUTHORITY=${MSAL_AUTHORITY}
VITE_MSAL_REDIRECT_URI=${MSAL_REDIRECT_URI}
VITE_MSAL_SCOPES=openid,profile
