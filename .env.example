# Server configuration
SERVER_PORT=2567
SERVER_HOST=0.0.0.0
LOG_LEVEL=info
PROTOCOL_VERSION=1
SERVER_BUILD_NUMBER=1
HEARTBEAT_INTERVAL_MS=5000
HEARTBEAT_TIMEOUT_MS=30000
HEARTBEAT_RATE_LIMIT_CAPACITY=3
HEARTBEAT_RATE_LIMIT_REFILL_AMOUNT=1
HEARTBEAT_RATE_LIMIT_INTERVAL_MS=1000

# Metrics placeholders
METRICS_ENABLED=false

# Authentication (Azure Entra ID / MSAL)
# SPA (public client) registration
MSAL_CLIENT_ID=11111111-1111-1111-1111-111111111111
# API (resource) registration (use the API app's application/client ID)
MSAL_API_AUDIENCE=22222222-2222-2222-2222-222222222222
MSAL_REQUIRED_SCOPE=api://${MSAL_API_AUDIENCE}/GameService.Access

# Authority & JWKS
MSAL_AUTHORITY=https://login.microsoftonline.com/your-tenant-id/v2.0
MSAL_JWKS_URI=https://login.microsoftonline.com/your-tenant-id/discovery/v2.0/keys

# Frontend authentication routes through Vite (values duplicated for clarity)
MSAL_REDIRECT_URI=http://localhost:5173

# Frontend (Vite uses VITE_ prefix for exposure)
VITE_SERVER_URL=http://localhost:2567
VITE_PROTOCOL_VERSION=1
VITE_MSAL_CLIENT_ID=${MSAL_CLIENT_ID}
VITE_MSAL_AUTHORITY=${MSAL_AUTHORITY}
VITE_MSAL_REDIRECT_URI=${MSAL_REDIRECT_URI}
VITE_MSAL_SCOPES=openid,profile,api://${MSAL_API_AUDIENCE}/GameService.Access
